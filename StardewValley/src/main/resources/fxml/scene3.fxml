<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="stardewValley.screens.Scene3Controller">

    <!-- Top section for Toolbar, Navigation Buttons, and Scene Title -->
    <top>
        <VBox spacing="10" alignment="TOP_CENTER">
            <!-- Navigation and Score Display -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Previous" onAction="#goToPrevious"/>
                <Button text="Finish" onAction="#finishGame"/>
                <Text text="Score: " />
                <Text fx:id="scoreText" text="0" />
            </HBox>

            <!-- Title or Scene Description -->
            <HBox spacing="15" alignment="CENTER">
                <Text fx:id="sceneTitleText" text="Escena Final" />
            </HBox>
        </VBox>
    </top>

    <!-- Center area for Displaying Final Score or End Game Content -->
    <center>
        <ImageView fx:id="finalImage" fitWidth="800" fitHeight="600" />
    </center>

</BorderPane>
